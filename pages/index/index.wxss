/**index.wxss**/
.M-header{
  width: 100%;
  height: auto;
  background-color: #30c27b;
}
.M-nav{
  width: 100%;
  display: flex;
  text-align: center;
  border-top:1px solid rgba(255, 255, 255,.75);
  padding: 0 20rpx;
  -webkit-box-sizing: border-box;
      -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.M-menu,.M-identify{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.M-menu image,.M-identify image{
  width: 60rpx;
  height: 60rpx;
}
.M-title{
  flex:1;
  z-index:10;
  line-height: 80rpx;
  color: #fff;
  display: block;
  font-size:14px;
}
.M-title text{
  display: inline-block;
  padding:0 15rpx;
}
.M-title .hover{
  font-weight: 600;
  font-size:16px;
  -webkit-transition: all .1s ease-out;
          transition: all .1s ease-out;
}
.M-swiper,.M-swiper image{
  width:100%
}
.M-swiper swiper {
  height:450rpx;
}
.M-nav-list{
  overflow: hidden;
  width:100%;
  padding: 20rpx;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;

}
.M-league{
  width:33.33333333%;
  float: left;
  padding: 20rpx 20rpx;
  -webkit-box-sizing: border-box;
     -moz-box-sizing: border-box;
          box-sizing: border-box;
}
.M-league image{
  width:50rpx;
  height:50rpx;
  vertical-align:middle;
  margin-right:20rpx;
}
.M-league text{
  font-size:14px;
}

.M-hot-title{
  display:flex;
}
.M-hot-title text{
  flex:1;
  text-align:center;
  line-height:100rpx;
  color:#000;
  font-size:18px;
  font-weight:600;
  display:block;
}
.M-arrow{
  width: 100rpx;
  height:100rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  margin-right:20rpx;

}
.M-arrow image{
  width:45rpx;
  height:45rpx;
}
.M-player{
  position: fixed;
  left:0;
  bottom:0;
  width:100%;
  height:120rpx;
  line-height:120rpx;
  border-top: 1px solid #eee;
  display:flex;
}
.M-playSongImg,.M-playerSuspend,.M-playerKey{
  width:120rpx;
  height:120rpx;
  display:flex;
  justify-content:center;
  align-items:center;
  padding:0 20rpx;
}
.M-playSongImg image{
  width:90rpx;
  height:90rpx;
  border-radius:50%;
}
.M-playSong{
  flex:1;
  white-space:nowrap;
  text-overflow:ellipsis;
  overflow:hidden;
  -webkit-text-overflow:ellipsis;
}
.M-playerSuspend image{
  width:60rpx;
  height:60rpx;
}
.M-playerPause{
  display: none;
}

/* 自定义切换栏目效果 */
.M-hall,.M-my{
  position: fixed;
  top: 172rpx;
  left:0;
  width: 100%;
  -webkit-transition: all 0.2s linear;
          transition: all 0.2s linear;
  -webkit-transform: translate3d(0%, 0, 0);
          transform: translate3d(0%, 0, 0);
}
.M-table{
  -webkit-transform: translate3d(100%, 0, 0);
          transform: translate3d(100%, 0, 0);
}


.weui-search-bar__form{
  background-color: rgba(0, 0, 0,.1);
  border:none;
}
.weui-search-bar{
  background-color: rgba(0, 0, 0,0);
  border-top:none;
}
.weui-search-bar__cancel-btn{
  color:#fff;
}

.container{
  height:100%;
  position:fixed;
  width:100%;
  z-index:1;
  transition:All 0.4s ease;
  -webkit-transition:All 0.4s ease;
}
.contaLeft{
  height:100%;
  width:750rpx;
  position:fixed;
  background-color:#f4f4f4;
  z-index:0;

}